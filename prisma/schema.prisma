generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String?   // Apenas para login com credenciais
  name         String?
  image        String?
  createdAt    DateTime  @default(now())
  role         String    @default("user")  // "user" ou "admin"
  isSuperAdmin Boolean   @default(false)   // Marca superadmin

  payments     Payment[] // Relacionamento com pagamentos
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  amount        Float
  status        String
  transactionId String   @unique
  paymentMethod String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId]) // Define um Ã­ndice para melhorar a performance em consultas por userId
}